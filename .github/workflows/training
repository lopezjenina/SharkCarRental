name: Train Chatbot Model

on:
  push:
    branches:
      - main

jobs:
  train_model:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Set Up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8  # Adjust this to your Python version

      - name: Install Dependencies
        run: pip install -r requirements.txt  # Assuming your requirements are in requirements.txt

      - name: Train and Save Model
        run: |
          # Replace this with the command to train and save your chatbot model
          python training.py
